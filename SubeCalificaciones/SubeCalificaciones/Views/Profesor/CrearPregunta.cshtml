@model SubeCalificaciones.Pregunta
@{
    ViewBag.Title = "CrearPregunta";
    Layout = "~/Views/Shared/Profesor/_ProfesorLayout.cshtml";
}
<script type="text/javascript">
    $('.datepicker').datepicker();
</script>
<div class="contenedor_formulario">
    <div class="titulo_formulario">
        <h2>Crear pregunta</h2>
    </div>
    <form role="form" method="post" action="CrearPregunta" class="contenedor_formulario">
        @Html.ValidationSummary(true, " ", new { @class = "text-danger" })
        
        @Html.HiddenFor(m => m.IdProfesorCreacion, new { Value = @Session["UserSession"] })
        <!--Nro presunta-->
        <div class="form-group">
            <label>Nro(*):</label>
            @Html.TextBoxFor(m => m.Nro, new { @class = "form-control", placeholder = "Ingrese nro", @type = "number", @min = ViewBag.nro })
            @Html.ValidationMessageFor(m => m.Nro, "", new { @class = "text-danger" })

        </div>
        <div class="row">
            <!--Clase-->
            <div class="form-group col-md-6">
                <label>Clase(*):</label>
                @Html.DropDownListFor(m => m.IdClase, new SelectList(@ViewBag.clases, "IdClase", "Nombre"), "Selecciones Clase ", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.IdClase, "", new { @class = "text-danger" })
            </div>
            <!--Tema-->
            <div class="form-group col-md-6">

                <label>Tema(*):</label>
                @Html.DropDownListFor(m => m.IdTema, new SelectList(@ViewBag.temas, "IdTema", "Nombre"), "Seleccione Tema ", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.IdTema, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="row">
            <!--Fecha de Inicio-->
            <div class="form-group col-md-6">
                <label>Disponible Desde:</label>
                @Html.TextBoxFor(model => model.FechaDisponibleDesde, new { @type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FechaDisponibleDesde, "", new { @class = "text-danger" })
            </div>
            <!--Fecha de fin-->
            <div class="form-group col-md-6">
                <label>Hasta:</label>
                @Html.TextBoxFor(m => m.FechaDisponibleHasta, new { @type = "date", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.FechaDisponibleHasta, "", new { @class = "text-danger" })
            </div>
        </div>

        <!--Pregunta-->
        <div class="form-group">
            <label>Pregunta(*):</label>
            @Html.TextAreaFor(m => m.Pregunta1, new { @class = "form-control", placeholder = "Ingrese la pregunta" })
            @Html.ValidationMessageFor(m => m.Pregunta1, "", new { @class = "text-danger" })

        </div>
        <div class="row text-center">
            <input type="submit" class="btn btn-lg btn-primary" value="Crear">
            <input type="submit" class="btn btn-secondary btn-lg" value="Cancelar">

        </div>
    </form>
</div>
