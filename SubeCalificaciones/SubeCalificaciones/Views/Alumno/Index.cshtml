@model IList<SubeCalificaciones.Models.Alumno>
@{
    ViewBag.Title = "Alumno Home";
    Layout = "~/Views/Shared/Alumno/_AlumnoLayout.cshtml";
}

<h2>¡Sube tus calificaciones!</h2>
<p>Contestando preguntas preferidas a lo visto en clase, suma puntos cruciales para subir tus calificaciones ak final de la cursada.</p>
<br />
<h4>Tabla de posiciones:</h4>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Pos</th>
            <th>Alumno</th>
            <th>Puntos</th>
            <th>Respuestas Bien</th>
            <th>Mejor Respuesta</th>
        </tr>  
    </thead>
    <tbody>
            @{int i = 1;}
            @foreach (var alumno in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@alumno.Nombre @alumno.Apellido</td>
                    <td>@alumno.PuntosTotales</td>
                    <td>@alumno.CantidadRespuestasCorrectas</td>
                    <td>@alumno.CantidadMejorRespuesta</td>
                </tr>
                i++;
            }
    </tbody>
</table>